<%- contentFor('body') %>

<!-- Home/Hero Section -->
<section id="home" class="section-hero">
    <div id="homeCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
        <!-- Carousel Indicators -->
        <div class="carousel-indicators">
            <% images.forEach((image, index) => { %>
                <button type="button" 
                        data-bs-target="#homeCarousel" 
                        data-bs-slide-to="<%= index %>" 
                        class="<%= index === 0 ? 'active' : '' %>"
                        aria-current="<%= index === 0 ? 'true' : 'false' %>"
                        aria-label="Slide <%= index + 1 %>">
                </button>
            <% }); %>
        </div>
        
        <!-- Carousel Items -->
        <div class="carousel-inner">
            <% images.forEach((image, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <div class="overlay"></div>
                    <img src="/images/gallery/<%= image %>" 
                         class="d-block w-100" 
                         alt="Property Image <%= index + 1 %>">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <h1 class="display-4 fw-bold text-white mb-4">Welcome to Luxury Living</h1>
                                    <p class="lead mb-4">Experience the perfect blend of comfort and convenience</p>
                                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                                        <a href="/floorplans" class="btn btn-primary btn-lg px-4 gap-3">View Floor Plans</a>
                                        <a href="/contact" class="btn btn-outline-light btn-lg px-4">Contact Us</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Gallery Section -->
<section id="gallery" class="section-gallery">
    <div class="section-content">
        <h2 class="section-title">Photo Gallery</h2>
        <div class="gallery-grid">
            <% images.forEach((image, index) => { %>
                <div class="gallery-item">
                    <img src="/images/gallery/<%= image %>" 
                         alt="Property Image <%= index + 1 %>"
                         data-bs-toggle="modal"
                         data-bs-target="#galleryModal<%= index %>">
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Floor Plans Section -->
<section id="floorplans" class="section-floorplans">
    <div class="section-content">
        <h2 class="section-title">Floor Plans</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <img src="/images/floorplans/6384347.jpg" class="card-img-top" alt="1 Bedroom">
                    <div class="card-body">
                        <h5 class="card-title">1 Bedroom / 1 Bath</h5>
                        <p class="card-text">750 sq ft</p>
                        <ul class="list-unstyled">
                            <li>Starting at $1,200/month</li>
                            <li>Open concept living area</li>
                            <li>Modern kitchen with appliances</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <img src="/images/floorplans/6384347.jpg" class="card-img-top" alt="2 Bedroom">
                    <div class="card-body">
                        <h5 class="card-title">2 Bedroom / 2 Bath</h5>
                        <p class="card-text">1,100 sq ft</p>
                        <ul class="list-unstyled">
                            <li>Starting at $1,800/month</li>
                            <li>Split bedroom floor plan</li>
                            <li>Private balcony</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Amenities Section -->
<section id="amenities" class="section-amenities">
    <div class="section-content">
        <h2 class="section-title">Amenities</h2>
        <div class="amenities-grid">
            <div class="col-md-4">
                <div class="amenity-item text-center">
                    <i class="fas fa-swimming-pool fa-3x mb-3 text-primary"></i>
                    <h4>Swimming Pool</h4>
                    <p>Resort-style pool with sundeck</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="amenity-item text-center">
                    <i class="fas fa-dumbbell fa-3x mb-3 text-primary"></i>
                    <h4>Fitness Center</h4>
                    <p>24/7 access to modern equipment</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="amenity-item text-center">
                    <i class="fas fa-paw fa-3x mb-3 text-primary"></i>
                    <h4>Pet Friendly</h4>
                    <p>Welcome your furry friends</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="section-contact">
    <div class="section-content">
        <h2 class="section-title">Contact Us</h2>
        <div class="contact-wrapper">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Get in Touch</h5>
                            <form id="contactForm">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" rows="4" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Location & Hours</h5>
                            <p><i class="fas fa-map-marker-alt me-2"></i> 123 Main Street, City, State 12345</p>
                            <p><i class="fas fa-phone me-2"></i> (555) 123-4567</p>
                            <p><i class="fas fa-envelope me-2"></i> info@housingcomplex.com</p>
                            <h6 class="mt-4">Office Hours:</h6>
                            <ul class="list-unstyled">
                                <li>Monday - Friday: 9:00 AM - 6:00 PM</li>
                                <li>Saturday: 10:00 AM - 4:00 PM</li>
                                <li>Sunday: Closed</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 