<%- contentFor('body') %>

<!-- Hero Section with Carousel -->
<section class="hero-banner">
    <div id="homeCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
        <!-- Carousel Indicators -->
        <div class="carousel-indicators">
            <% images.forEach((image, index) => { %>
                <button type="button" 
                        data-bs-target="#homeCarousel" 
                        data-bs-slide-to="<%= index %>" 
                        class="<%= index === 0 ? 'active' : '' %>"
                        aria-current="<%= index === 0 ? 'true' : 'false' %>"
                        aria-label="Slide <%= index + 1 %>">
                </button>
            <% }); %>
        </div>
        
        <!-- Carousel Items -->
        <div class="carousel-inner">
            <% images.forEach((image, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <div class="overlay"></div>
                    <img src="/images/gallery/<%= image %>" 
                         class="d-block w-100" 
                         alt="Property Image <%= index + 1 %>">
                    <div class="carousel-caption">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <h1 class="display-4 fw-bold text-white mb-4">Welcome to Luxury Living</h1>
                                    <p class="lead mb-4">Experience the perfect blend of comfort and convenience</p>
                                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                                        <a href="/floorplans" class="btn btn-primary btn-lg px-4 gap-3">View Floor Plans</a>
                                        <a href="/contact" class="btn btn-outline-light btn-lg px-4">Contact Us</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Main Content Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-tools fa-2x text-primary"></i>
                        </div>
                        <h5 class="card-title">Maintenance Requests</h5>
                        <p class="card-text">Submit and track maintenance requests for your unit easily.</p>
                        <% if (typeof user !== 'undefined') { %>
                            <a href="/maintenance" class="btn btn-primary">View Requests</a>
                        <% } else { %>
                            <a href="/login" class="btn btn-primary">Login to Submit</a>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-building fa-2x text-primary"></i>
                        </div>
                        <h5 class="card-title">Floor Plans</h5>
                        <p class="card-text">Explore our available floor plans and find your perfect space.</p>
                        <a href="/floorplans" class="btn btn-primary">View Floor Plans</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="fas fa-images fa-2x text-primary"></i>
                        </div>
                        <h5 class="card-title">Photo Gallery</h5>
                        <p class="card-text">Take a virtual tour of our community and facilities.</p>
                        <a href="/gallery" class="btn btn-primary">View Gallery</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Contact Information</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Office Hours:</strong> Mon-Fri 9:00 AM - 5:00 PM</p>
                        <p><strong>Phone:</strong> (555) 123-4567</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Email:</strong> info@housingcomplex.com</p>
                        <p><strong>Emergency:</strong> (555) 987-6543</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 